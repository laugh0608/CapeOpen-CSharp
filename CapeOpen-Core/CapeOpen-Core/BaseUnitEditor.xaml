<Window x:Class="CapeOpen.BaseUnitEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:CapeOpen"
        mc:Ignorable="d"
        Title="BaseUnitEditor" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <xctk:PropertyGrid x:Name="propertyGrid1"
                           Grid.Row="0"
                           AutoGenerateProperties="True"
                           ShowSearchBox="True"
                           ShowSortOptions="True"
                           ShowAdvancedOptions="True"/>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Click="OkButton_Click" Width="80" Margin="0,0,10,0"/>
            <!--<Button Content="Cancel" IsCancel="True" Width="80"/>-->
        </StackPanel>
    </Grid>
</Window>
